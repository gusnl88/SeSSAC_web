<!-- userList.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }
      h1 {
        text-align: center;
        margin-top: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <a href="/">HOME</a>
    <h1>유저리스트</h1>
    <table>
      <thead>
        <tr>
          <th>아이디</th>
          <th>이름</th>
          <th>비밀번호</th>
          <th>생성일</th>
          <th>수정일</th>
        </tr>
      </thead>
      <tbody>
        <% userList.forEach(user => { %>
        <tr>
          <td><%= user.u_id %></td>
          <td><%= user.name %></td>
          <td><%= user.pw %></td>
          <td><%= new Date(user.createdAt).toLocaleString('ko-KR', { hour12: false }) %></td>
          <td><%= new Date(user.updatedAt).toLocaleString('ko-KR', { hour12: false }) %></td>          
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
